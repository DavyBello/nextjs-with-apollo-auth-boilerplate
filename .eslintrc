{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 0,
    "react/display-name": 0,
    "no-unused-vars": "warn",
    "no-console": 1,
    "react/prop-types": 0,
    "no-unexpected-multiline": "warn"
  },
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.4.1"
    }
  }
}
